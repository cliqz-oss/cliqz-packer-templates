{
  "builders": [
    {
      "boot_wait": "2s",
      "vm_name":"MacOSHighSierra",
      "disk_size": 70400,
      "hard_drive_interface":"sata",
      "sata_port_count":"2",
      "guest_os_type": "MacOS1013_64",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum" : "{{user `iso_checksum`}}",
      "guest_additions_url":"/Applications/VirtualBox.app/Contents/MacOS/VBoxGuestAdditions.iso",
      "iso_interface":"sata",
      "shutdown_command": "echo '{{user `username`}}'|sudo -S shutdown -h now",
      "communicator": "ssh",
      "ssh_port": 22,
      "ssh_username": "{{user `username`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "headless": true,
      
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory","8000"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"],
        ["modifyvm", "{{.Name}}", "--firmware", "efi"],
        ["modifyvm", "{{.Name}}", "--hpet", "on"],
        ["modifyvm", "{{.Name}}", "--usbehci", "on"],
        ["modifyvm", "{{.Name}}", "--usb", "on"],
        ["modifyvm", "{{.Name}}", "--mouse", "usbtablet"],
        ["modifyvm", "{{.Name}}", "--keyboard", "usb"],
        ["modifyvm", "{{.Name}}", "--audio", "none"],
        ["modifyvm", "{{.Name}}", "--vram", "128"],
        ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
        ["modifyvm", "{{.Name}}", "--apic", "on"],
        ["modifyvm", "{{.Name}}", "--vrde", "on"],
        ["modifyvm", "{{.Name}}", "--pae", "on"]
      ]
    }
  ],
  "min_packer_version": "0.7.0",
  "provisioners": [
    {
      "type": "shell-local",
      "command": "sleep {{user `provisioning_delay`}}"
    },
    {
      "type": "file",
      "destination": "/private/tmp/packages",
      "source": "../packages"
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}",
      "scripts": [
        "../scripts/vagrant.sh"
      ],
      "expect_disconnect": true,
      "environment_vars": [
        "AUTOLOGIN={{user `autologin`}}",
        "CHEF_VERSION={{user `chef_version`}}",
        "FACTER_VERSION={{user `facter_version`}}",
        "HIERA_VERSION={{user `hiera_version`}}",
        "INSTALL_VAGRANT_KEYS={{user `install_vagrant_keys`}}",
        "NOCM={{user `nocm`}}",
        "INSTALL_XCODE_CLI_TOOLS={{user `install_xcode_cli_tools`}}",
        "PASSWORD={{user `password`}}",
        "PUPPET_VERSION={{user `puppet_version`}}",
        "UPDATE_SYSTEM={{user `update_system`}}",
        "USERNAME={{user `username`}}"
      ]
    }
  ],
  "variables": {
    "vm_name": "osx-xcode-10.1",
    "autologin": "false",
    "chef_version": "none",
    "facter_version": "none",
    "hiera_version": "none",
    "install_vagrant_keys": "true",
    "install_xcode_cli_tools": "true",
    "iso_url": "{{user `iso_url`}}",
    "password": "vagrant",
    "provisioning_delay": "0",
    "puppet_version": "none",
    "update_system": "true",
    "username": "vagrant",
    "version" : "{{env `BUILD_NUMBER`}}"
  }
}
